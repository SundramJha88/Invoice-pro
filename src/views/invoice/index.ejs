<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoices - Invoice Pro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <%- include('../partials/navbar') %>

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Invoices</h2>
            <a href="/invoice/add" class="btn btn-primary">Create New Invoice</a>
        </div>

        <% if (locals.error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Invoice #</th>
                                <th>Company</th>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% invoices.forEach(invoice => { %>
                                <tr>
                                    <td><%= invoice.invoiceNumber %></td>
                                    <td><%= invoice.companyId.name %></td>
                                    <td><%= new Date(invoice.date).toLocaleDateString() %></td>
                                    <td>â‚¹<%= invoice.totalAmount.toFixed(2) %></td>
                                    <td>
                                        <span class="badge bg-<%= invoice.status === 'paid' ? 'success' : 
                                            invoice.status === 'sent' ? 'info' : 
                                            invoice.status === 'cancelled' ? 'danger' : 'warning' %>">
                                            <%= invoice.status %>
                                        </span>
                                    </td>
                                    <td>
                                        <a href="/invoice/<%= invoice._id %>" class="btn btn-sm btn-primary">View</a>
                                        <a href="/invoice/edit/<%= invoice._id %>" class="btn btn-sm btn-info">Edit</a>
                                        <a href="/invoice/delete/<%= invoice._id %>" class="btn btn-sm btn-danger" 
                                           onclick="return confirm('Are you sure?')">Delete</a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>

                <% if (totalPages > 1) { %>
                    <nav>
                        <ul class="pagination justify-content-center">
                            <% for(let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                                    <a class="page-link" href="/invoice?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>