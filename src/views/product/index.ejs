<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products - Invoice Pro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light d-flex flex-column min-vh-100">
    <%- include('../partials/navbar') %>
    
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Products</h2>
            <a href="/product/add" class="btn btn-primary">Add New Product</a>
        </div>

        <% if (locals.error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                               
                                <th>Price</th>
                                <th>Tax Rate</th>
                                <th>In Stock</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach(product => { %>
                                <tr>
                                    <td><%= product.name %></td>
                                   
                                    <td>â‚¹<%= product.price.toFixed(2) %></td>
                                    <td><%= product.taxRate %>%</td>
                                    <td><%= product.inStock %></td>
                                    <td>
                                        <span class="badge bg-<%= product.isActive ? 'success' : 'danger' %>">
                                            <%= product.isActive ? 'Active' : 'Inactive' %>
                                        </span>
                                    </td>
                                    <td>
                                        <a href="/product/edit/<%= product._id %>" class="btn btn-sm btn-info">Edit</a>
                                        <a href="/product/delete/<%= product._id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>

                <% if (totalPages > 1) { %>
                    <nav>
                        <ul class="pagination justify-content-center">
                            <% for(let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                                    <a class="page-link" href="/product?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                <% } %>
            </div>
        </div>
    </div>
    <%- include('../partials/footer') %>
</body>
</html>